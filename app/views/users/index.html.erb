

<div class='wrapper'>
  <div class='nav_main'>
    <%= render "articles/header"%>
  </div>
  <div class='main'>
    <div class='main_menu'>
      <h1 class="head_en">UserList</h1>
      <h3 class="head__ja">ユーザーリスト</h3>
      <%= render "header"%>
    </div>
    <div class='main_content'>
      <% @users.each do |user| %>
        <hr>
        <p><span>email: </span><%= link_to user.email, user_path(user.id) %></p>
          <% if current_user != user %>
              <% if user.followed_by?(current_user) %>
                  <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
              <% else %>
                  <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
              <% end %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

<ul class="dropdown">
  <li><%#= link_to "トップページに戻る", articles_path %></li>
  <li><%#= link_to "プロフィール", users_path(current_user) %></li>
  <li><%#= link_to "編集", edit_user_path(current_user), class: "name" %></li>
  <li><%#= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
</ul>

<ul class="dropdown">
  <li><%#= link_to "ユーザー一覧", users_path(current_user) %></li>
  <li><%#= link_to "フォロー", follows_user_path(current_user) %></li>
  <li><%#= link_to "フォロワー", followers_user_path(current_user) %></li>
  <li><%#= link_to "お気に入り", article_favorites_path(current_user) %></li>
</ul>     