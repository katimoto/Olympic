<div class='wrapper'>
  <div class='up1'>
      <%= form_with(url: search_questions_path, local: true, method: :get, class: "search-form", id: "qf") do |form| %>
        <%= form.text_field :keyword, placeholder: "質問を探す", class: "search-input", id: "qt" %>
        <%= form.submit "Go", class: "search-btn", id: "qs" %>
      <% end %>
    <%= render 'shared/up1'%>
  </div>
  <div class='down1'>
    <%= render 'shared/side_main' %>
    <div class='nav_main'>
      <div class='up2'>
        <%= link_to questions_path do %>
          <p>質問一覧<p>
        <% end %>
      </div>
      <div class='down2'>
        <%= render "articles/header"%>
      </div>
    </div>
    <div class='main'>
      <div class='main_menu'>
        <h1 class="head_en">質問一覧</h1>
        <div class='aside'>
          <%= render 'questions/header'%>
        </div>
      </div>
      <div class='main_content'>
        <div class='question_wrapper'>
          <div class='question_index'>
            <h1>質問一覧</h1>
            <div class="contents low">
                <%= question_lists(@questions) %>
            </div>
            <%= paginate @questions %>
          </div>
          <div class='question_aside'>
            <div class='question_category'>
              <h3>カテゴリーから探す</h3>
              <div class='category_row'>
                <%= tag.span Category.find(2).name, class:'categg' %>
                <%= tag.span Category.find(3).name, class:'categg' %>
                <%= tag.span Category.find(4).name, class:'categg' %>
                <%= tag.span Category.find(5).name, class:'categg' %>
                <%= tag.span Category.find(6).name, class:'categg' %>
                <%= tag.span Category.find(7).name, class:'categg' %>
                <%= tag.span Category.find(8).name, class:'categg' %>
                <%= tag.span Category.find(9).name, class:'categg' %>
                <%= tag.span Category.find(10).name, class:'categg' %>
                <%= tag.span Category.find(11).name, class:'categg' %>
                <%= tag.span Category.find(12).name, class:'categg' %>
                <%= tag.span Category.find(13).name, class:'categg' %>
                <%= tag.span Category.find(14).name, class:'categg' %>
                <%= tag.span Category.find(15).name, class:'categg' %>
                <%= tag.span Category.find(16).name, class:'categg' %>
                <%= tag.span Category.find(17).name, class:'categg' %>
                <%= tag.span Category.find(18).name, class:'categg' %>
                <%= tag.span Category.find(19).name, class:'categg' %>
                <%= tag.span Category.find(20).name, class:'categg' %>
              </div>
            </div>
            <div class='question_answer'>
              <h3>回答数ランキング</h3>
              <div class='ranking_answer'>
              <% if !@questions2.empty? %>
                <table class="table-name">
                  <tbody>
                    <tr>
                      <th>１位：</th>
                      <td><%= @questions2.first.name %></td>
                    </tr>
                    <tr>
                      <th>２位</th>
                      <td><%= @questions2.second.name %></td>
                    </tr>
                    <tr>
                      <th>３位</th>
                      <td><%= @questions2.third.name %></td>
                    </tr>
                    <tr>
                      <th>４位：</th>
                      <td><%= @questions2.fourth.name %></td>
                    </tr>
                    <tr>
                      <th>５位</th>
                      <td><%= @questions2.fifth.name %></td>
                    </tr>                                                       
                  </tbody>    
                </table> 
              <% end %>
              </div>
            </div>
            <div class='question_like'>
              <h3>いいね数ランキング</h3>
              <div class='ranking_like'>
              <% if !@question_ranking.empty? %>
                <table class="table-name">
                  <tbody>
                    <tr>
                      <th>１位：</th>
                      <td><%= @question_ranking.first.name %></td>
                    </tr>
                    <tr>
                      <th>２位</th>
                      <td><%= @question_ranking.second.name %></td>
                    </tr>
                    <tr>
                      <th>３位</th>
                      <td><%= @question_ranking.third.name %></td>
                    </tr>
                    <tr>
                      <th>４位：</th>
                      <td><%= @question_ranking.fourth.name %></td>
                    </tr>
                    <tr>
                      <th>５位</th>
                      <td><%= @question_ranking.fifth.name %></td>
                    </tr>
                    <tr>                                                       
                  </tbody>    
                </table> 
              <% end %>
              </div>      
            </div>
          </div>
        </div>
      </div>
      <%= link_to new_question_path, data: {"turbolinks"=>false} do %>
        <i class="fas fa-plus-circle firework"></i>
      <% end %>
    </div>
  </div>
  <div class='footer'>
  <p>@Copyright Olimpic Apps 2020</p>
  </div>
</div>