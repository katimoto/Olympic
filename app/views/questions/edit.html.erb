

<div class='wrapper'>
  <div class='nav_main'>
    <%= render "articles/header"%>
  </div>
  <div class='main'>
    <div class='main_menu'>
      <h1 class="head_en">Question Edit</h1>
      <h3 class="head__ja">質問の編集</h3>
      <%= render "header"%>
    </div>
    <div class='main_content'>
      <div class="contents row">
        <div class="container">
          <%= form_with(model: @question, local: true) do |form| %>
          <%= render 'shared/error_messages', model: form.object %>
            <h3>編集する</h3>
            <%= form.text_field :text, placeholder: "タイトル", rows: "10" %>
            <%= render partial: "form", locals: { form: form } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>