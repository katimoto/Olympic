<div class='wrapper'>
  <div class='up1'>
    <%= search_form_for @p, url: searches_articles_path, class: "upp" do |f| %>
      <%= f.collection_select :word_eq, @article_tag, :word, :word, include_blank: '指定なし' %>
      <br>
    <%= f.submit '検索' %>
    <% end %>
    <%= render 'shared/up1'%>
  </div>
  <div class='down1'>
    <%= render 'shared/side_main' %>
    <div class='nav_main'>
      <div class='up2'>
        <%= link_to articles_path do %>
          <p>記事一覧<p>
        <% end %>
      </div>
      <div class='down2'>
        <%= render "header"%>
      </div>
    </div>
    <div class='main'>
      <div class='main_menu'>
        <h1 class="head_en">記事検索</h1>
        <div class='aside'>
          <%= render 'heading'%>
        </div>
      </div>
      <div class='main_content'>
        <div class='content'>
          <div class='article_show'>
            <div class="contents row">
              <%= article_lists(@articles) %>
            </div>
            <%= paginate @articles %>
          </div>
        </div>
      </div>
          <%= link_to new_article_path, data: {"turbolinks"=>false} do %>
            <i class="fas fa-plus-circle firework"></i>
          <% end %>
    </div>
  </div>
  <div class='footer'>
  <p>@Copyright Olimpic Apps 2020</p>
  </div>
</div>
<% breadcrumb :root %>

