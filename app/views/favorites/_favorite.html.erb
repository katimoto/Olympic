<% if user_signed_in? %>
  <% if article.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
    <%=link_to article_favorites_path(article.id), method: :delete, remote: true do %>
    <div class='fabo'>
      <p id="favo"><i class="far fa-thumbs-up"></i>:<%= article.favorites.count %><p>
    </div>
    <% end %>
  <% else %>
    <%=link_to article_favorites_path(article.id), method: :post, remote: true do %>
    <div class='fabo'>
      <p id="favo"><i class="far fa-thumbs-up"></i>:<%= article.favorites.count %></p>
    </div>
    <% end %>
  <% end %>
<% else %>
<div class='fabo'>
  <p id="favo"><i class="far fa-thumbs-up"></i>:<%= article.favorites.count %></p>
<div class='fabo'>
<% end %>