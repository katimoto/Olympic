

<div class='wrapper'>
  <div class='nav_main'>
    <%= render "articles/header"%>
  </div>
  <div class='main'>
    <div class='main_menu'>
      <h1 class="head_en">Room</h1>
      <h3 class="head__ja">チャットルームへようこそ</h3>
      <%= render "header"%>
    </div>
    <div class='main_content'>
      <div class='wrapper'>
        <div class='side-bar'>
          <% if user_signed_in? %>
          <div class="rooms">
            <% current_user.rooms.each do |room| %>
              <div class="room">
                <div class="room-name">
                  <%= link_to room.name, room_messages_path(room) %>
                  <%= link_to '購入画面へ', order_new_room_path(room.id) %>
                </div>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<ul class="dropdown">
  <li><%#= link_to "マイルーム", users_path(current_user) %></li>
  <li><%#= link_to "ルームを出品する", new_room_path %></li>
  <li><%#= link_to "ルームを購入する", new_room_path %></li>
</ul>