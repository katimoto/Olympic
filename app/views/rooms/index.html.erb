

<div class='wrapper'>
  <div class='nav_main'>
    <%= render "articles/header"%>
  </div>
  <div class='main'>
    <div class='main_menu'>
      <h1 class="head_en">Room</h1>
      <h3 class="head__ja">チャットルームへようこそ</h3>
      <%= render "header"%>
    </div>
    <div class='main_content'>
      <div class='wrapper'>
        <div class='side-bar'>
          <% if user_signed_in? %>
          <div class="rooms">
            <% @rooms.each do |room| %>
              <div class="room">
                <div class="room-name">
                  <%= room.name %>
                  <% if room.room_order %>
                    <div class='sold-out'>
                      <span>Sold Out!!</span>
                    </div>
                  <% end %>
                  <% if user_signed_in? && room.user_id != current_user.id %>
                    <% if !room.room_order %>
                      <%= link_to '購入画面へ', order_new_room_path(room.id) %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>