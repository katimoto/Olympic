<% if user_signed_in? %>
<div class="rooms">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
        <%= link_to '購入画面へ', order_new_room_path(room.id) %>
      </div>
    </div>
  <% end %>
</div>
<% end %>